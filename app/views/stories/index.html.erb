<p id="notice"><%= notice %></p>

<h1>Every day is a different story. Here's mine..</h1>
<div class="list">
<table width="1000">
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Note</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.date %></td>
        <td><%= story.subject %></td>
        <td><%= story.note %></td>
        <td><%= story.comment %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

