<%= simple_form_for(@author), :url { :action => :create, :id => @story.id} =>  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.input :contribution %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
